<div class="card">
    <div class="card-image">
        <img src="{{ app.request.basepath }}/res/images/{{ post.getImage() }}"/>
        <span class="card-title card-title-modified"><p>{{ post.getTitle() }}</p></span>
    </div>
    <div class="card-content">
        <p>{{ post.getContent() }}</p>
    </div>
    <div class="card-action">
        <p>{{ post.getPostDate() }}</p>
        <a href="#" class="btn">Voir Plus</a>
    </div>
</div>
