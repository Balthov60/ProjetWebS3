{% extends 'layout.twig' %}
{% block body %}
    <div class="main-page-centered">
        <div class="commentary-edit">
            <div class="commentary-header">
                Post√© le {{ commentary.getPostDate() }} par {{ commentary.getPseudo() }}
            </div>
            <form action="{{ app.url_generator.generate("updateCommentary") }}" method="POST" class="commentary-form">
                <textarea name="content" title="content" placeholder="Votre Commentaire..." rows="4">{{ commentary.getContent() }}</textarea>
                <input type="number" name="commentaryID" title="commentaryID" value="{{ commentary.getIdCommentary() }}" hidden>
                <input type="number" name="postID" title="postID" value="{{ commentary.getIdPost() }}" hidden>
                <input type="submit" name="submit" class="second-color-button btn">
            </form>
        </div>
    </div>
{% endblock %}